<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/id_place_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="right"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="10dp">

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/id_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_place_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/rating_bar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRatingBar
                            android:id="@+id/id_rating_star"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center_vertical"
                            android:isIndicator="true" />

                        <TextView
                            android:id="@+id/id_rating_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </android.support.v7.widget.LinearLayoutCompat>
                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="3dp"
                card_view:contentPadding="10dp">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Icon short cut bat with of top of activity -->
                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/id_shortcut_icon_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d3d0d0"
                        android:divider="#474646"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/id_maps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:divider="#0d0c0c"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:src="@drawable/ic_menu_maps" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:text="@string/maps_title"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/id_call"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:divider="#0f0f0f"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:src="@drawable/call" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:text="@string/call_title"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/id_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:divider="#0f0f0f"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:src="@drawable/website" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:text="@string/website_title"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/id_favorite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:divider="#0f0f0f"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:src="@drawable/unfavorite" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:text="@string/favorite_title"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </android.support.v7.widget.LinearLayoutCompat>
                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/id_address_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/place_address" />

                        <TextView
                            android:id="@+id/id_address_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:gravity="left"
                            android:text="Place address will come here"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    </android.support.v7.widget.LinearLayoutCompat>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="5sp"
                        android:src="@color/divider_black" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/id_distance_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/place_address" />

                        <TextView
                            android:id="@+id/id_distance_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:gravity="left"
                            android:text="Distance of place"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    </android.support.v7.widget.LinearLayoutCompat>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="5sp"
                        android:src="@color/divider_black" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/id_timings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginTop="10sp"
                        android:background="#d3d0d0"
                        android:orientation="vertical">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/id_today_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:gravity="left"
                                android:text="@string/today_timing"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                            <TextView
                                android:id="@+id/id_hours_more"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginRight="5sp"
                                android:clickable="true"
                                android:gravity="right"
                                android:text="@string/more"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/id_week_timing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2sp"
                                android:src="@color/divider_white" />

                            <TextView
                                android:id="@+id/id_monday_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:gravity="left"
                                android:text="@string/monday"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2sp"
                                android:src="@color/divider_white" />

                            <TextView
                                android:id="@+id/id_tuesday_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:gravity="left"
                                android:text="@string/tuesday"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2sp"
                                android:src="@color/divider_white" />

                            <TextView
                                android:id="@+id/id_wednesday_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:gravity="left"
                                android:text="@string/wednesday"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2sp"
                                android:src="@color/divider_white" />

                            <TextView
                                android:id="@+id/id_thursday_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:gravity="left"
                                android:text="@string/thursday"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2sp"
                                android:src="@color/divider_white" />

                            <TextView
                                android:id="@+id/id_friday_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:gravity="left"
                                android:text="@string/friday"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2sp"
                                android:src="@color/divider_white" />

                            <TextView
                                android:id="@+id/id_saturday_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:gravity="left"
                                android:text="@string/saturday"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2sp"
                                android:src="@color/divider_white" />

                            <TextView
                                android:id="@+id/id_sunday_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:gravity="left"
                                android:text="@string/sunday"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
                        </android.support.v7.widget.LinearLayoutCompat>
                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:background="#d3d0d0"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10sp"
                                android:src="@drawable/photos" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10sp"
                                android:gravity="left"
                                android:text="@string/photos"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/google_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/photos_top_padding"
                            android:layout_marginTop="@dimen/photos_top_padding">

                            <HorizontalScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scrollIndicators="bottom">

                                <android.support.v7.widget.LinearLayoutCompat
                                    android:id="@+id/imageGallery"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" />
                            </HorizontalScrollView>
                        </android.support.v7.widget.LinearLayoutCompat>
                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/id_google_review_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d3d0d0"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:src="@drawable/review" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:gravity="left"
                            android:text="@string/reviews"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </android.support.v7.widget.LinearLayoutCompat>
                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.CardView>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>