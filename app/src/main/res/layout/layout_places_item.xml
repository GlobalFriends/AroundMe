<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail_image"
                android:layout_width="@dimen/thumbnail_image_width"
                android:layout_height="@dimen/thumbnail_image_height" />

            <TextView
                android:id="@+id/place_name"
                style="@style/PlacesResult.Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/thumbnail_image" />

            <TextView
                android:id="@+id/vincinity"
                style="@style/PlacesResult.Vicinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_name"
                android:layout_toRightOf="@id/thumbnail_image" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>