<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thumbnail_image"
        android:layout_width="@dimen/thumbnail_image_width"
        android:layout_height="@dimen/thumbnail_image_height" />

    <TextView
        android:id="@+id/place_name"
        android:layout_toRightOf="@id/thumbnail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PlacesResult.Name" />

    <TextView
        android:id="@+id/vincinity"
        android:layout_below="@id/place_name"
        android:layout_toRightOf="@id/thumbnail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PlacesResult.Vicinity" />
</RelativeLayout>